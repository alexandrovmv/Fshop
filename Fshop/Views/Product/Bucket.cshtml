@model Fshop.Models.Cart
@using Fshop.Models
<div style="margin-bottom:10px">
    @Html.ActionLink("К покупкам", "Index", "Product", new { @class = "btn btn-primary pull-right" })
    @Html.ActionLink("Очистить корзину", "ClearBucket", "Product", new { @class = "btn btn-primary pull-right" })
</div>

<table class="table">
    <thead class="thead-inverse">
        <tr>
           
            <th>#</th>
            <th class="hidden">Id</th>
            <th>Наименование</th>
            <th>Цена</th>
            <th>Количество</th>
            <th>Итого</th>
            
            <th> Действия</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Check.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td class="hidden">@Model.Check[i].product.ProductID</td>
                <td>@Model.Check[i].product.Name</td>
                <td>@Model.Check[i].product.Price</td>
                <td>@Model.Check[i].Count</td>
                <td>@Model.Check[i].Cost</td>
                <td class="align-middle">
                    @Html.RouteLink("Delete", new { controller = "Product", action = "Remove", id = @Model.Check[i].product.ProductID }, new { @class = "btn btn-danger btn-edit", style = "min-width:100px;" })
                    @Html.RouteLink("Edit", new { controller = "Product", action = "Edit", id = @Model.Check[i].product.ProductID }, new { @class = " btn btn-warning btn-edit", style = "min-width:100px" })
                </td>
            </tr>
        }
        
        <tr class="info">
            <th scope="row">Итого</th>
            <td class="hidden"></td>
            <td></td>
            <td></td>
            <td></td>
            <th scope="row">@Model.Cost</th>
            <td></td>
           
</tr>
  </tbody>
</table>
