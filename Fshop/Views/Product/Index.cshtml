@model IEnumerable<FShop.DB.DB.Product>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">
    <div class="row" style="margin-bottom:10px">
        @Html.ActionLink("6", "Index", "Product", new { ProdType =ViewBag.ProdType,Page=ViewBag.Page, ProdOnPage = 6 }, new { @class="btn btn-info btn-lg", @style="min-width:60px; border-top-left-radius:50px" })
        @Html.ActionLink("9", "Index", "Product", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 9 }, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; " })
        @Html.ActionLink("12", "Index", "Product", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 12 }, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; " })
        @Html.ActionLink("15", "Index", "Product", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 15 }, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; border-top-right-radius:50px " })
    </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-4 card" style="padding:5px; background-color:antiquewhite">
                    <img class="card-img-top" src=@item.Photo alt="Card image" height="250">
                    <div class="card-block">
                        <h4 class="card-title">@item.Name</h4>
                        <h6 class="card-subtitle"></h6>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">Цена: @item.Price</p>
                    </div>
                </div>
            }
        </div>
    </div>
