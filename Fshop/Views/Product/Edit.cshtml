@model Fshop.Models.CartItem
    
@using (Html.BeginForm())
{

    <div>
        @Html.ValidationSummary()
    </div>
    @Html.HiddenFor(x => x.product.ProductID)
    <div class="form-group">
        @Html.Label("Наименование", new { @class = "col-form-label" })
        <p>  @Model.product.Name</p>
    </div>
        <div class="form-group">
            @Html.Label("Количество", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Count, new { htmlAttributes = new { @class = "form-control" } }) </p>
        </div>
        @Html.HiddenFor(x => x.product.Name)
    @Html.HiddenFor(x => x.product.Photo)
    @Html.HiddenFor(x => x.product.Price)
    @Html.HiddenFor(x => x.product.Category)
    @Html.HiddenFor(x => x.product.Description)

        <div>
            <input type="submit" class="btn btn-outline-success" value="Сохранить">
        </div>
}

