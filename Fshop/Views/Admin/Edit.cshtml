@model FShop.DB.DB.Product

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{

    <div>
        @Html.ValidationSummary()
    </div>
        @Html.HiddenFor(x => x.ProductID)
        <div class="form-group">
            @Html.Label("Наименование", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("Описание", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } }) </p>
        </div>
        <div class="form-group">
            @Html.Label("Категория", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("Цена", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("Не работает!!!!", new { @class = "col-form-label" })
            <p>  <input type="file" name="fileUpload" value="@Model.Photo" /><br /></p>
        </div>
        <div class="form-group">
            @Html.Label("Фото", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control", @value = Model.Photo } })</p>
        </div>

        <div>
            <input type="submit" class="btn btn-outline-success" value="Сохранить">
        </div>
}

