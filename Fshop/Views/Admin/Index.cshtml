@model IEnumerable<FShop.DB.DB.Product>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "product_list",
    };
}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-collapse collapse">
       @if (Request.IsAuthenticated)
       {
           using (Html.BeginForm("LogOff", "Authorise", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
           {
            @Html.AntiForgeryToken()

    
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
             
               <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
       
           }
       }
        </div>
    </div>
</div>

<div class="container" style="margin-top:20px">
    <div class="row" style="margin-bottom:10px">

        @Ajax.ActionLink("10", "GetProductList", "Admin", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 10 }, options, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; border-top-left-radius:50px" })
        @Ajax.ActionLink("20", "GetProductList", "Admin", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 20 }, options, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; " })
        @Ajax.ActionLink("30", "GetProductList", "Admin", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 30 }, options, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; " })
        @Ajax.ActionLink("40", "GetProductList", "Admin", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 40 }, options, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; " })
        @Ajax.ActionLink("50", "GetProductList", "Admin", new { ProdType = ViewBag.ProdType, Page = ViewBag.Page, ProdOnPage = 50 }, options, new { @class = "btn btn-info btn-lg", @style = "min-width:60px; border-top-right-radius:50px " })
        @Html.ActionLink("NEW", "AddProduct","Admin")
        <div>
            <div class="row" id="product_list">
                @Html.Action("GetProductList")
            </div>
        </div>
    </div>

</div>
